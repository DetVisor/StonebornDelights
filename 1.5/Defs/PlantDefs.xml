<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Stoutcap -->

<ThingDef ParentName="CavePlantBase">
    <defName>SD_Plant_Stoutcap</defName>
    <label>stoutcap</label>
    <description>A soft bioengineered mushroom grown for the tasty result of brewing it. It can grow on fungal gravel, but only in darkness - exposing it to any kind of light, including darklights, will kill it.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/Stoutcap</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.2, 0.3, 0.13)</volume>
        <offset>(-0.03,0,-0.44)</offset>
      </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.3</fertilityMin>
      <fertilitySensitivity>0.15</fertilitySensitivity>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>SD_RawStoutcap</harvestedThingDef>
	    <drugForHarvestPurposes>True</drugForHarvestPurposes>
      <harvestYield>11</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
	    <sowMinSkill>4</sowMinSkill>
	    <sowResearchPrerequisites>
        <li>SD_DwarvenDrugPlants</li>
      </sowResearchPrerequisites>
      <topWindExposure>0</topWindExposure>
      <growDays>8</growDays>
      <cavePlantWeight>0</cavePlantWeight>
      <visualSizeRange>0.4~0.75</visualSizeRange>
      <humanFoodPlant>true</humanFoodPlant>
      <maxMeshCount>4</maxMeshCount>
    </plant>
  </ThingDef>
  
    <ThingDef ParentName="RoughPlantBase">
    <defName>SD_RawStoutcap</defName>
    <label>stoutcap</label>
    <description>Raw stoutcap. A flavoring and preserving agent that is necessary for making shroom ale.</description>
    <possessionCount>10</possessionCount>
    <graphicData>
      <texPath>Things/RawStoutcap</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>35</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
    <ingestible>
      <preferability>DesperateOnly</preferability>
      <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
    </ingestible>
  </ThingDef>
  
