        <comps>
          <li Class="HediffCompProperties_SeverityPerDay">
            <severityPerDay>-0.9</severityPerDay>
          </li>
          <li Class="StonebornDelights.HediffCompProperties_HiddenWith">
            <hiderHediffs>
             <li>SD_HiveHigh</li>
             <li>SD_SWHigh</li>
             <li>SD_ShroomHigh</li>
             <li>SD_ForgeHigh</li>
             <li>SD_ShatterbrewHigh</li>
            </hiderHediffs>
